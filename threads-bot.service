[Unit]
Description=Threads Bot - Telegram to Threads Auto Publisher
After=network.target

[Service]
Type=simple
User=admin
WorkingDirectory=/Users/admin/Threads
ExecStart=/usr/bin/python3 /Users/admin/Threads/bot.py
ExecStop=/bin/kill -SIGTERM $MAINPID
Restart=always
RestartSec=10
StandardOutput=append:/Users/admin/Threads/threads_bot.log
StandardError=append:/Users/admin/Threads/threads_bot.log

# Обмеження ресурсів
MemoryLimit=512M
CPUQuota=50%

[Install]
WantedBy=multi-user.target

